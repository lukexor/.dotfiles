#!/bin/bash

tmux new-session -s 'Servers' \; \
    send-keys 'cd ~/code/line-planning-tool-ui && npm start' C-m \; \
    split-window -h \; \
    send-keys 'cd ~/code/line-planning-services && npm start' C-m \; \
    split-window -v \; \
    send-keys 'cd ~/code/lpx-mmx-export-component && npm start' C-m \;
