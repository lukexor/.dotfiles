snippet has "has"
has '${1:attribute}' => (
	'is'      => '${2:ro}',
	'isa'     => '${3:Str}',
	'lazy'    => 1,
	'default' => ${4:''},
${5:	'writer'  => '_$1',}${5/.+/\n/});
endsnippet

snippet immute "immute"
__PACKAGE__->meta->make_immutable;
endsnippet

snippet died "die Dumper (died)"
use Data::Dumper;
die Dumper ${1:value};
endsnippet

snippet warnd "warn Dumper (warnd)"
use Data::Dumper;
warn Dumper ${1:value};
endsnippet

